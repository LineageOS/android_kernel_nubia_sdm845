# audio
CONFIG_SND_SOC_TFA9894=y
CONFIG_NUBIA_TYPEC_HEADSET=y
CONFIG_TYPEC_AUDIO_ADAPTER_SWITCH=y

# camera
CONFIG_NUBIA_CAMERA_DUAL_CAMERA_IMX519=y

# charger
CONFIG_NUBIA_CHARGE_FEATURE=y
CONFIG_SMB1355_SLAVE_CHARGER=y

# fingerprint
CONFIG_NUBIA_DRIVERS=y
CONFIG_NUBIA_FINGERPRINT=y
CONFIG_NUBIA_SENSORS_FP=y
CONFIG_NUBIA_SENSORS_FP_GF5288_LEFT=y
CONFIG_NUBIA_SENSORS_FP_GF5288_RIGHT=y

# hardware
CONFIG_NUBIA_HW_CONFIG_BY_GPIO=y
CONFIG_QCOM_RTB=y
CONFIG_QCOM_RTB_SEPARATE_CPUS=y

# lcd
CONFIG_NUBIA_SWITCH_LCD=y
CONFIG_NUBIA_LCD_DISP_PREFERENCE=y
# CONFIG_NUBIA_LCD_BACKLIGHT_CURVE is not set

# led
CONFIG_NUBIA_BREATH_LEDS=y

# others
CONFIG_LOG_BUF_SHIFT=19
CONFIG_CPU_FREQ_STAT=y
CONFIG_NUBIA_CGF_NOTIFY_EVENT=y

# pstore
CONFIG_PSTORE=y
CONFIG_PSTORE_PMSG=y
CONFIG_PSTORE_CONSOLE=y
CONFIG_PSTORE_RAM=y

# sensors
CONFIG_NUBIA_DOUBLE_PROXIMITY=y
CONFIG_NUBIA_SENSORS=y
CONFIG_NUBIA_SENSORS_RGB_BH1745=y
CONFIG_NUBIA_SENSORS_HALL_DEVICE=y

# storage
CONFIG_NUBIA_READ_CONSOLE=y

# touchscreen
CONFIG_NUBIA_TOUCH=y
CONFIG_NUBIA_TOUCH_GOODIX=y
CONFIG_TOUCHSCREEN_GOODIX_GTX8=y
CONFIG_TOUCHSCREEN_GOODIX_GTX8_UPDATE=y
CONFIG_TOUCHSCREEN_GOODIX_GTX8_GESTURE=y
CONFIG_TOUCHSCREEN_GOODIX_GTX8_TOOLS=y
CONFIG_NUBIA_TOUCHSCREEN_HXCHIPSET=y
CONFIG_TOUCHSCREEN_HIMAX_I2C=y
CONFIG_TOUCHSCREEN_HIMAX_DEBUG=y
# CONFIG_TOUCHSCREEN_HIMAX_ITO_TEST is not set

# vibrator
CONFIG_FEATURE_ZTEMT_HAPTIC_VIBRATOR=y

# usb
CONFIG_NUBIA_USB_DISABLE_LINK_PM=y
CONFIG_NUBIA_USB_HIGH_SPEED=y
CONFIG_NUBIA_USB_PHY_TUNE=y

# Nubia configuration options
CONFIG_MACH_NUBIA_SDM845=y
CONFIG_MACH_NUBIA_NX616J=y
